---
import TablerIcon from "./TablerIcon.astro";

const currentYear = new Date().getFullYear();

const footerNav = [
  { label: "Home", href: "/" },
  { label: "Work", href: "/work" },
  { label: "About", href: "/about" },
  { label: "Contact", href: "/contact" },
] as const;

const socialLinks = [
  { label: "Linkedin", href: "https://linkedin.com" },
  { label: "Github", href: "https://github.com" },
] as const;

const desktopDots = [
  [30, 2.5],
  [30, 5],
  [30, 7.5],
  [32.5, 5],
  [27.5, 5],
  [27.5, 27.5],
  [27.5, 30],
  [27.5, 32.5],
  [25, 30],
  [30, 30],
  [12.5, 22.5],
  [12.5, 7.5],
  [12.5, 25],
  [12.5, 10],
  [12.5, 12.5],
  [17.5, 17.5],
  [20, 17.5],
  [22.5, 17.5],
  [7.5, 17.5],
  [5, 17.5],
  [2.5, 17.5],
  [12.5, 27.5],
  [10, 20],
  [10, 15],
  [15, 15],
  [15, 20],
  [12.5, 17.5],
] as const;

const mobileDots = [
  [24, 2],
  [24, 4],
  [24, 6],
  [26, 4],
  [22, 4],
  [22, 22],
  [22, 24],
  [22, 26],
  [20, 24],
  [24, 24],
  [10, 18],
  [10, 6],
  [10, 20],
  [10, 8],
  [10, 10],
  [14, 14],
  [16, 14],
  [18, 14],
  [6, 14],
  [4, 14],
  [2, 14],
  [10, 22],
  [8, 16],
  [8, 12],
  [12, 12],
  [12, 16],
  [10, 14],
] as const;
---

<footer class="w-full border-t border-[var(--color-divider)] pb-[16px] pt-[24px] lg:pb-[20px] lg:pt-[40px]" aria-labelledby="site-footer-title">
  <h2 id="site-footer-title" class="sr-only">Stopka strony</h2>

  <div class="w-full px-[32px] lg:px-16">
    <div class="flex flex-col gap-[24px] lg:gap-[40px]">
      <div class="flex items-start justify-between lg:justify-start lg:gap-[200px]">
        <div class="relative size-[32px] lg:size-[40px]" aria-hidden="true">
          {
            mobileDots.map(([left, top]) => (
              <span class="absolute size-[2px] bg-[var(--color-text)] lg:hidden" style={`left:${left}px;top:${top}px;`}></span>
            ))
          }
          {
            desktopDots.map(([left, top]) => (
              <span class="absolute hidden size-[2.5px] bg-[var(--color-text)] lg:block" style={`left:${left}px;top:${top}px;`}></span>
            ))
          }
        </div>

        <nav aria-label="Nawigacja stopki">
          <ul class="flex w-[63px] flex-col items-start gap-[12px] text-[14px] leading-[24px] text-[var(--color-text)] lg:text-[16px] lg:leading-[32px]">
            {
              footerNav.map((item) => (
                <li>
                  <a href={item.href} class="px-[10px] focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--color-text)]">
                    {item.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>

        <div>
          <ul class="flex flex-col items-start gap-[12px] text-[14px] leading-[24px] text-[var(--color-text)] lg:text-[16px] lg:leading-[32px]">
            {
              socialLinks.map((item) => (
                <li>
                  <a
                    href={item.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group inline-flex items-center gap-[12px] focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--color-text)]"
                  >
                    <span>{item.label}</span>
                    <TablerIcon
                      name="arrow-up-right"
                      class="size-6 transition-transform duration-200 group-hover:-translate-y-[1px] group-hover:translate-x-[1px] lg:size-8"
                    />
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <p class="text-right text-[12px] leading-[16px] text-[var(--color-text)] lg:text-[14px] lg:leading-[19px]">
        &copy; Magdalena Szczeci≈Ñska {currentYear}
      </p>
    </div>
  </div>
</footer>
