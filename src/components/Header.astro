---
import ThemeToggle from "./ThemeToggle";

const navItems = [
  { href: "/", label: "Home" },
  { href: "/#projects", label: "Work" },
  { href: "/#about", label: "About" },
  { href: "/#contact", label: "Contact" },
];

const currentPath = Astro.url.pathname;
---

<header
  class="sticky top-0 z-50 bg-[var(--color-background)]/80 backdrop-blur-md border-b border-[var(--color-border)]"
  transition:name="header"
  transition:persist
>
  <nav class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <a
      href="/"
      class="text-xl font-bold text-[var(--color-text)] hover:text-[var(--color-accent)] transition-colors"
    >
      Portfolio
    </a>
    <div class="flex items-center gap-6">
      <ul class="hidden sm:flex items-center gap-6">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class:list={[
                  "text-sm transition-colors",
                  currentPath === item.href
                    ? "text-[var(--color-text)] font-medium"
                    : "text-[var(--color-text-muted)] hover:text-[var(--color-text)]",
                ]}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
      <ThemeToggle client:load />
    </div>
  </nav>
</header>
