---
import TablerIcon from "../../TablerIcon.astro";

const conclusionsRows = [
  {
    aspect: "Komunikacja",
    traditional: "Chat (Messenger/WhatsApp)",
    finding: "Szybka, ale informacje giną w historii",
  },
  {
    aspect: "Dane",
    traditional: "Linki, arkusze, maile",
    finding: "Rozproszone między wieloma narzędziami",
  },
  {
    aspect: "Decyzje",
    traditional: "Ankiety w komunikatorach",
    finding: "Brak trwałej akceptacji, giną w konwersacji",
  },
] as const;

const jobsToBeDone = [
  {
    icon: "notes",
    title: "Zebrać wszystkie propozycje w jednym miejscu",
    description:
      "Kiedy pomysły na nocleg, transport i atrakcje są rozproszone po czatach i narzędziach, potrzebuję jednego miejsca do zbierania i porządkowania wszystkich informacji.",
  },
  {
    icon: "scale",
    title: "Porównać opcje i podjąć wspólną decyzję",
    description:
      "Kiedy mamy kilka propozycji, chcę zobaczyć je obok siebie wraz z opiniami grupy, żeby wybrać najlepszą opcję dla wszystkich.",
  },
  {
    icon: "chart-bar",
    title: "Monitorować postęp planowania",
    description:
      "Kiedy część decyzji jest zamknięta, a część wciąż otwarta, potrzebuję przejrzystego widoku statusu każdej kategorii.",
  },
  {
    icon: "download",
    title: "Mieć gotowy plan zawsze pod ręką",
    description:
      "Kiedy wyjazd jest już zaplanowany, chcę mieć wszystkie informacje (adresy, godziny, linki) w jednym miejscu, dostępne nawet bez internetu.",
  },
] as const;

const planningFlow = [
  "Prosty start: użytkownik tworzy wyjazd przez formularz (data, nazwa, kierunek), który natychmiast generuje współdzieloną przestrzeń.",
  "Dashboard z kafelkami kategorii: status każdej kategorii (np. aktywne głosowanie, zakończone) daje poczucie kontroli nad procesem.",
  "Automatyczne parsowanie linków: system pobiera zdjęcia, ceny i nazwy z wklejanych linków (np. Airbnb, Booking), eliminując ręczne uzupełnianie danych.",
  "Kontekst komentarzy: komentarze są przypisane do konkretnych kategorii zamiast jednego chaotycznego wątku.",
] as const;

const scheduleFlow = [
  "Po zamknięciu głosowań aplikacja automatycznie generuje czytelny harmonogram z zatwierdzonymi opcjami.",
  'Funkcja "Pobierz PDF": harmonogram można wyeksportować jako PDF dostępny offline.',
] as const;

const testTasks = [
  "Dodanie nowej kategorii.",
  "Dodanie opcji do kategorii.",
  "Ogólne poruszanie się po aplikacji.",
] as const;

const nextSteps = [
  "Guest Mode - umożliwienie udziału w planowaniu bez zakładania konta, co obniży barierę wejścia.",
  "Audyt WCAG - weryfikacja kontrastów i hierarchii dla dostępności.",
] as const;

const successMetrics = [
  "Czas podjęcia decyzji - skrócenie czasu od dodania propozycji do zamknięcia głosowania (dane analityczne + badania jakościowe).",
  "Skuteczność parsowania linków - niska częstotliwość błędów przy automatycznym pobieraniu danych z zewnętrznych źródeł.",
] as const;
---

<section class="grid gap-[48px] lg:grid-cols-[509px_467px] lg:items-center lg:gap-[64px]" aria-labelledby="problem-title">
  <div class="flex flex-col gap-[24px] lg:justify-center">
    <h2 id="problem-title" class="text-[24px] leading-[32px] lg:text-[36px] lg:leading-[44px] text-[var(--color-text)]">Problem</h2>
    <div class="h-[2px] w-full bg-[var(--color-divider)]"></div>
    <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
      Planowanie wyjazdów w grupie generuje chaos z powodu rozproszenia informacji między różnymi narzędziami. Użytkownicy tracą kontrolę nad planem, decyzje gubią się w wątkach, a organizator musi ręcznie spinać ustalenia.
    </p>
    <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]"><strong>Frustracja:</strong> Uczestnicy gubią się w wątkach i tracą poczucie kontroli.</p>
    <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]"><strong>Paraliż decyzyjny:</strong> Trudno ustalić jedną wersję wydarzeń, gdy opinie są rozsiane po różnych kanałach.</p>
    <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]"><strong>Strata czasu:</strong> Organizer musi ręcznie spinać ustalenia w całość.</p>
  </div>
  <div class="overflow-hidden bg-transparent lg:h-[467px]">
    <video src="/assets/ready-set/start-page (1).mp4" aria-label="Animacja ekranu startowego aplikacji" class="w-full h-auto lg:size-full lg:object-cover" autoplay loop muted playsinline></video>
  </div>
</section>

<section class="grid gap-[48px] lg:grid-cols-[467px_507px] lg:items-center lg:gap-[64px]" aria-labelledby="goal-title">
  <div class="overflow-hidden bg-transparent lg:bg-[var(--color-surface)] lg:h-[467px]">
    <img src="/assets/ready-set/invite-readyset.png" alt="Widok zaproszenia do planowania wyjazdu" class="w-full h-auto lg:size-full lg:object-cover" loading="lazy" />
  </div>
  <div class="flex flex-col gap-[24px] lg:justify-center">
    <h2 id="goal-title" class="text-[24px] leading-[32px] lg:text-[36px] lg:leading-[44px] text-[var(--color-text)]">Cel</h2>
    <div class="h-px w-full bg-[var(--color-border)]"></div>
    <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
      Zaprojektować platformę, która w jasny sposób zbiera propozycje, ułatwia grupie szybkie podjęcie decyzji oraz weryfikuje postęp, przenosząc cały proces planowania z chaotycznych czatów i rozsianych narzędzi do jednego, spójnego harmonogramu. Krótko mówiąc: cały wyjazd w jednym miejscu.
    </p>
  </div>
</section>

<section class="flex flex-col gap-[64px]" aria-labelledby="research-title">
  <div class="flex flex-col gap-[24px]">
    <div class="flex flex-col gap-[14px]">
      <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[#474747]">Research</p>
      <h2 id="research-title" class="text-[24px] leading-[32px] lg:text-[36px] lg:leading-[44px] text-[var(--color-text)]">Proces badawczy</h2>
    </div>
    <div class="h-px w-full bg-[var(--color-border)]"></div>
    <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
      Przeprowadziłam 3 wywiady pogłębione (IDI) z osobami organizującymi wyjazdy grupowe, skupiając się na konkretnych wyzwaniach i sposobie podejmowania decyzji.
    </p>
    <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">Kluczowe pytania, które zadałam w trakcie każdego wywiadu to:</p>
    <ul class="list-disc pl-[24px] text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
      <li>Jakie były największe wyzwania podczas planowania ostatniego wyjazdu?</li>
      <li>W jaki sposób grupa wymienia się uwagami i podejmuje decyzje?</li>
      <li>Co chcieliby uprościć w całym procesie?</li>
    </ul>
  </div>

  <div class="overflow-hidden">
    <img src="/assets/ready-set/stickynotes-readyset.png" alt="Wyniki i artefakty procesu badawczego" class="w-full h-auto" loading="lazy" />
  </div>
</section>

<section class="grid gap-[48px] lg:grid-cols-[504px_467px] lg:items-stretch lg:gap-[64px]" aria-labelledby="conclusions-title">
  <div class="flex flex-col gap-[24px] lg:justify-center">
    <h2 id="conclusions-title" class="text-[24px] leading-[32px] lg:text-[36px] lg:leading-[44px] text-[var(--color-text)]">Wnioski</h2>
    <div class="h-px w-full bg-[var(--color-border)]"></div>
    <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
      Wykorzystując affinity mapping, pogrupowałam wypowiedzi w obszary tematyczne i zidentyfikowałam kluczowe problemy.
    </p>

    <div class="overflow-hidden rounded-[16px] border border-[var(--color-border)]">
      <div class="grid grid-cols-3 border-b border-[var(--color-border)] bg-[var(--color-foreground)]">
        <p class="px-[16px] py-[12px] text-[14px] font-medium leading-[20px] tracking-[0.25px]">Aspekt</p>
        <p class="px-[16px] py-[12px] text-[14px] font-medium leading-[20px] tracking-[0.25px]">Tradycyjny proces</p>
        <p class="px-[16px] py-[12px] text-[14px] font-medium leading-[20px] tracking-[0.25px]">Wnioski</p>
      </div>

      {
        conclusionsRows.map((row, index) => (
          <div class:list={["grid grid-cols-3", index < conclusionsRows.length - 1 ? "border-b border-[var(--color-border)]" : ""]}>
            <p class="px-[16px] py-[12px] text-[14px] leading-[20px] tracking-[0.25px] text-[var(--color-text)]">{row.aspect}</p>
            <p class="px-[16px] py-[12px] text-[14px] leading-[20px] tracking-[0.25px] text-[var(--color-text)]">{row.traditional}</p>
            <p class="px-[16px] py-[12px] text-[14px] leading-[20px] tracking-[0.25px] text-[var(--color-text)]">{row.finding}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<section class="flex flex-col gap-[64px]" aria-labelledby="define-title">
  <div class="flex flex-col gap-[24px] lg:justify-center">
    <div class="flex flex-col gap-[14px]">
      <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[#474747]">Define</p>
      <h2 id="define-title" class="text-[24px] leading-[32px] lg:text-[36px] lg:leading-[44px] text-[var(--color-text)]">Definiowanie rozwiązania</h2>
    </div>
    <div class="h-px w-full bg-[var(--color-border)]"></div>
    <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
      Na podstawie wniosków z badań sformułowałam pytania "How Might We", które ukierunkowały proces projektowy.
    </p>

    <ol class="flex flex-col gap-[32px]">
      <li class="grid gap-[12px] lg:grid-cols-[27px_1fr] lg:gap-[16px]">
        <p class="text-[45px] font-bold leading-[52px] text-[#474747]">1</p>
        <div class="flex flex-col gap-[12px]">
          <p class="text-[14px] lg:text-[16px] leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Jak możemy uporządkować różne typy informacji o wyjeździe?</p>
          <p class="text-[14px] lg:text-[16px] italic leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Rozwiązanie: Dedykowane kategorie (nocleg, transport, jedzenie) z opcjami dodawanymi przez uczestników.</p>
        </div>
      </li>
      <li class="grid gap-[12px] lg:grid-cols-[27px_1fr] lg:gap-[16px]">
        <p class="text-[45px] font-bold leading-[52px] text-[#474747]">2</p>
        <div class="flex flex-col gap-[12px]">
          <p class="text-[14px] lg:text-[16px] leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Jak możemy zebrać wszystkie propozycje w jednym miejscu, aby nie przepadły w historii czatu?</p>
          <p class="text-[14px] lg:text-[16px] italic leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Rozwiązanie: Stworzyć jedno miejsce, gdzie można gromadzić wszystkie informacje dotyczące wyjazdów.</p>
        </div>
      </li>
      <li class="grid gap-[12px] lg:grid-cols-[27px_1fr] lg:gap-[16px]">
        <p class="text-[45px] font-bold leading-[52px] text-[#474747]">3</p>
        <div class="flex flex-col gap-[12px]">
          <p class="text-[14px] lg:text-[16px] leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Jak możemy zamienić gotowy plan w prosty harmonogram dostępny zawsze pod ręką?</p>
          <p class="text-[14px] lg:text-[16px] italic leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Rozwiązanie: Automatyczny harmonogram generowany na podstawie decyzji grupy z możliwością pobrania.</p>
        </div>
      </li>
    </ol>
  </div>

  <div class="overflow-hidden lg:h-[837px]">
    <img src="/assets/ready-set/storeyboard-readyset.png" alt="Storyboard definiujący rozwiązanie" class="size-full object-contain" loading="lazy" />
  </div>
</section>

<section class="mx-auto flex w-full max-w-[864px] flex-col gap-[64px]" aria-labelledby="jtbd-title">
  <div class="flex flex-col gap-[24px]">
    <div class="flex flex-col gap-[14px]">
      <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[#474747]">JTBD</p>
      <h2 id="jtbd-title" class="text-[24px] leading-[32px] lg:text-[36px] lg:leading-[44px] text-[var(--color-text)]">Jobs to be done</h2>
    </div>
    <div class="h-px w-full bg-[var(--color-border)]"></div>
    <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
      Zamiast od razu projektować funkcje, skupiłam się na zadaniach, które użytkownicy muszą wykonać w procesie planowania.
    </p>
  </div>

  <div class="flex flex-col gap-[24px]">
    {
      jobsToBeDone.map((job) => (
        <article class="rounded-[12px] border border-[var(--color-border)] bg-[var(--color-foreground)] px-[20px] py-[32px]" aria-label={job.title}>
          <div class="flex flex-col gap-[20px] lg:flex-row lg:items-center lg:gap-[24px]">
            <TablerIcon name={job.icon} class="size-[56px] text-[#1d272d]" />
            <div class="flex-1">
              <h3 class="text-[20px] leading-[28px] lg:text-[22px] lg:leading-[28px] text-[var(--color-text)]">{job.title}</h3>
              <p class="mt-[20px] text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">{job.description}</p>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>

<section class="grid gap-[48px] lg:grid-cols-[514px_457px] lg:items-center lg:gap-[64px]" aria-labelledby="user-flow-title">
  <div class="flex flex-col gap-[24px]">
    <div class="flex flex-col gap-[14px]">
      <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[#474747]">User flow</p>
      <h2 id="user-flow-title" class="text-[24px] leading-[32px] lg:text-[36px] lg:leading-[44px] text-[var(--color-text)]">Architektura i kluczowe decyzje projektowe</h2>
    </div>

    <div class="h-[2px] w-full bg-[var(--color-divider)]"></div>
    <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">Aplikacja dzieli proces na dwie wyraźne fazy, co odzwierciedliłam w nawigacji: Planowanie i Harmonogram.</p>

    <h3 class="text-[14px] lg:text-[16px] font-medium leading-[24px] tracking-[0.5px] text-[var(--color-text)]">Planowanie</h3>
    <ul class="list-disc pl-[24px] text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
      {planningFlow.map((item) => <li>{item}</li>)}
    </ul>

    <h3 class="text-[14px] lg:text-[16px] font-medium leading-[24px] tracking-[0.5px] text-[var(--color-text)]">Harmonogram</h3>
    <ul class="list-disc pl-[24px] text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
      {scheduleFlow.map((item) => <li>{item}</li>)}
    </ul>
  </div>

  <div class="overflow-hidden lg:h-[658px]">
    <img src="/assets/ready-set/flow.png" alt="Schemat przepływu użytkownika" class="size-full object-contain" loading="lazy" />
  </div>
</section>

<section class="mx-auto flex w-full max-w-[864px] flex-col gap-[24px]" aria-labelledby="design-title">
  <div class="flex flex-col gap-[14px]">
    <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[#474747]">Design</p>
    <h2 id="design-title" class="text-[24px] leading-[32px] lg:text-[36px] lg:leading-[44px] text-[var(--color-text)]">Decyzje projektowe i ekrany</h2>
  </div>
  <div class="h-px w-full bg-[var(--color-border)]"></div>

  <section class="flex flex-col gap-[40px]" aria-labelledby="home-screen-title">
    <div class="flex flex-col gap-[24px]">
      <h3 id="home-screen-title" class="text-[20px] leading-[28px] lg:text-[28px] lg:leading-[36px] text-[var(--color-text)]">Ekran domowy</h3>
      <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">Na ekranie domowym użytkownika korzystającego z aplikacji możemy wyróżnić sekcje wyjazdów aktywnych oraz zarchiwizowanych. Z tego poziomu użytkownik ma możliwość stworzenia nowego wyjazdu i przejścia do aktywnych bądź zakończonych. Nowi użytkownicy otrzymują informację o braku wyjazdów i komunikat CTA o stworzeniu nowego wyjazdu. Proces tworzenia wyjazdu jest taki sam niezależnie od użytkownika.</p>
    </div>
    <div class="overflow-hidden bg-transparent lg:bg-[var(--color-surface)] lg:h-[449px]">
      <img src="/assets/ready-set/ekran-domowy-readyset.png" alt="Widok ekranu domowego aplikacji" class="w-full h-auto lg:size-full lg:object-cover" loading="lazy" />
    </div>
  </section>

  <section class="flex flex-col gap-[40px]" aria-labelledby="dashboard-title">
    <div class="flex flex-col gap-[24px]">
      <h3 id="dashboard-title" class="text-[20px] leading-[28px] lg:text-[28px] lg:leading-[36px] text-[var(--color-text)]">Dashboard wyjazdu</h3>
      <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">Widok wyjazdu jest głównym ekranem wyjazdu. Z poziomu tego widoku użytkownik może zarządzać całym wyjazdem, jego kategoriami, opcjami kategorii czy zaproszonymi osobami. Zamiast niekończącej się listy, zastosowałam kafelki kategorii, które od razu pokazują status. Dodatkowo użytkownik może eksportować gotowy plan jako gotowy plik PDF z całym planem i informacjami o danych opcjach.</p>
    </div>
    <div class="overflow-hidden bg-transparent lg:bg-[var(--color-surface)] lg:h-[618px]">
      <img src="/assets/ready-set/dashboard-wyjazdu-readyset.png" alt="Dashboard wyjazdu" class="w-full h-auto lg:size-full lg:object-cover" loading="lazy" />
    </div>
  </section>

  <section class="flex flex-col gap-[40px]" aria-labelledby="options-title">
    <div class="flex flex-col gap-[24px]">
      <h3 id="options-title" class="text-[20px] leading-[28px] lg:text-[28px] lg:leading-[36px] text-[var(--color-text)]">Dodawanie opcji</h3>
      <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">Użytkownik ma możliwość dodania opcji na etapie tworzenia kategorii lub po jej utworzeniu. Podczas dodawania kolejnych np. hoteli wyświetlany jest modal, który pozwala użytkownikowi natychmiast wrócić do widoku kategorii jeśli zmieni zdanie. Samo dodanie opcji polega głównie na wklejeniu linku, a aplikacja automatycznie zaciągnie zdjęcie i nazwę. To kluczowe dla szybkości dodawania propozycji.</p>
    </div>
    <div class="overflow-hidden bg-transparent lg:bg-[var(--color-surface)] lg:h-[506px]">
      <img src="/assets/ready-set/dodawanie-opcji-readyset.png" alt="Widok dodawania opcji" class="w-full h-auto lg:size-full lg:object-cover" loading="lazy" />
    </div>
    <div class="grid gap-[24px] lg:grid-cols-2">
      <div class="overflow-hidden bg-transparent lg:bg-[var(--color-surface)] lg:h-[298px]">
        <video src="/assets/ready-set/add-option.mp4" aria-label="Dodatkowy ekran opcji 1" class="w-full h-auto lg:size-full lg:object-cover" autoplay loop muted playsinline></video>
      </div>
      <div class="overflow-hidden bg-transparent lg:bg-[var(--color-surface)] lg:h-[298px]">
        <video src="/assets/ready-set/new-option.mp4" aria-label="Dodatkowy ekran opcji 2" class="w-full h-auto lg:size-full lg:object-cover" autoplay loop muted playsinline></video>
      </div>
    </div>
  </section>

  <section class="flex flex-col gap-[40px]" aria-labelledby="schedule-title">
    <div class="flex flex-col gap-[24px]">
      <h3 id="schedule-title" class="text-[20px] leading-[28px] lg:text-[28px] lg:leading-[36px] text-[var(--color-text)]">Harmonogram</h3>
      <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">Po zakończeniu planowania, aplikacja generuje czysty, czytelny harmonogram.Dodatkowo zaprojektowałam funkcję "Pobierz PDF".</p>
