---
import Layout from "../layouts/Layout.astro";
import TablerIcon from "../components/TablerIcon.astro";

const contactMethods = [
  {
    title: "E-mail",
    value: "hello@example.com",
    href: "mailto:hello@example.com",
    description: "Najlepszy kanał do zapytań projektowych i współpracy.",
  },
  {
    title: "LinkedIn",
    value: "linkedin.com/in/magda",
    href: "https://linkedin.com",
    description: "Wiadomości prywatne i kontakt biznesowy.",
  },
  {
    title: "GitHub",
    value: "github.com/magda",
    href: "https://github.com",
    description: "Kod i projekty techniczne.",
  },
] as const;

const collaborationSteps = [
  "Krótki opis projektu i celu biznesowego.",
  "Zakres: UX, UI, prototyp, wdrożenie lub audyt.",
  "Wstępny termin startu i preferowany tryb współpracy.",
] as const;
---

<Layout title="Contact" description="Skontaktuj się w sprawie współpracy UX/UI">
  <div class="hidden px-[32px] pt-[32px] lg:block lg:px-16 lg:pt-[40px]" aria-hidden="true">
    <div class="mx-auto flex min-h-[20px] w-full items-center">
      <div class="h-px w-full border-b border-[var(--color-subtle)]"></div>
    </div>
  </div>

  <div class="px-[32px] pt-[32px] lg:hidden" aria-hidden="true">
    <div class="flex min-h-[20px] items-center">
      <div class="h-px w-full border-b border-[var(--color-subtle)]"></div>
    </div>
  </div>

  <section class="mx-auto w-full max-w-[1040px] px-6 pb-[120px] pt-[32px] lg:px-0 lg:pb-[200px] lg:pt-[80px]" aria-labelledby="contact-page-title">
    <div class="grid gap-[48px] lg:grid-cols-[1fr_332px] lg:gap-[64px]">
      <div class="space-y-[24px]">
        <h1 id="contact-page-title" class="text-[56px] font-medium leading-[1] tracking-[-0.01em] text-[var(--color-text)] lg:text-[128px]">
          Contact
        </h1>

        <div class="h-[2px] w-full bg-[var(--color-divider)]"></div>

        <p class="max-w-[680px] text-[18px] leading-[30px] tracking-[0.3px] text-[var(--color-text)]">
          Jeśli chcesz omówić nowy projekt, odświeżyć istniejący produkt albo przygotować audyt UX/UI, napisz wiadomość. Odpowiadam możliwie szybko i zaczynam od konkretu: celu, zakresu oraz planu działania.
        </p>
      </div>

      <aside class="rounded-[16px] border border-[var(--color-border)] bg-[var(--color-foreground)] p-[24px] lg:p-[28px]" aria-label="Dostępność">
        <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[var(--color-text-muted)]">Dostępność</p>
        <p class="mt-[12px] text-[24px] leading-[32px] text-[var(--color-text)]">Nowe projekty od marca 2026</p>
        <div class="mt-[20px] inline-flex items-center gap-[10px] rounded-[999px] border border-[var(--color-border)] px-[12px] py-[8px]">
          <span class="inline-flex size-[10px] rounded-full bg-[#49b46f]" aria-hidden="true"></span>
          <span class="text-[14px] leading-[20px] tracking-[0.25px] text-[var(--color-text)]">Otwarte terminy</span>
        </div>
      </aside>
    </div>
  </section>

  <section class="mx-auto w-full max-w-[1040px] px-6 pb-[120px] lg:px-0 lg:pb-[200px]" aria-labelledby="contact-methods-title">
    <h2 id="contact-methods-title" class="sr-only">Kanały kontaktu</h2>

    <div class="grid gap-[20px] lg:grid-cols-3">
      {
        contactMethods.map((item) => (
          <article class="group rounded-[16px] border border-[var(--color-border)] bg-[var(--color-foreground)] p-[24px] transition-colors hover:bg-[var(--color-background)]">
            <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[var(--color-text-muted)]">{item.title}</p>
            <a
              href={item.href}
              target={item.href.startsWith("http") ? "_blank" : undefined}
              rel={item.href.startsWith("http") ? "noopener noreferrer" : undefined}
              class="mt-[14px] inline-flex items-center gap-[10px] text-[20px] leading-[28px] text-[var(--color-text)] underline-offset-4 hover:underline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--color-text)]"
            >
              <span>{item.value}</span>
              <TablerIcon name="arrow-up-right" class="size-5" />
            </a>
            <p class="mt-[16px] text-[15px] leading-[24px] tracking-[0.25px] text-[var(--color-text-muted)]">{item.description}</p>
          </article>
        ))
      }
    </div>
  </section>

  <section class="mx-auto w-full max-w-[1040px] px-6 pb-[120px] lg:px-0 lg:pb-[200px]" aria-labelledby="collaboration-title">
    <div class="grid gap-[24px] rounded-[16px] border border-[var(--color-border)] bg-[var(--color-foreground)] p-[24px] lg:grid-cols-[1fr_260px] lg:items-start lg:gap-[40px] lg:p-[36px]">
      <div>
        <h2 id="collaboration-title" class="text-[32px] leading-[40px] text-[var(--color-text)] lg:text-[36px] lg:leading-[44px]">
          Jak przygotować pierwszy kontakt
        </h2>

        <div class="mt-[20px] h-px w-full bg-[var(--color-divider)]"></div>

        <ul class="mt-[20px] list-disc space-y-[10px] pl-[24px] text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          {collaborationSteps.map((step) => <li>{step}</li>)}
        </ul>
      </div>

      <div class="rounded-[12px] border border-[var(--color-border)] p-[18px]">
        <p class="text-[14px] leading-[20px] tracking-[0.25px] text-[var(--color-text-muted)]">Szybki start</p>
        <a
          href="mailto:hello@example.com?subject=Zapytanie%20o%20wsp%C3%B3%C5%82prac%C4%99"
          class="mt-[10px] inline-flex w-full items-center justify-center rounded-[10px] bg-[#1e1e1e] px-[18px] py-[14px] text-[14px] lg:text-[16px] font-medium leading-[20px] text-white shadow-[0px_1px_2px_0px_rgba(0,0,0,0.1)] transition-colors hover:bg-[#111111] focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--color-text)]"
        >
          Napisz wiadomość
        </a>
      </div>
    </div>
  </section>
</Layout>
