---
import Layout from "../../layouts/Layout.astro";
import TablerIcon from "../../components/TablerIcon.astro";
import { getAllProjects } from "../../lib/projects";

export function getStaticPaths() {
  return getAllProjects().map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;

const tools = [
  { src: "/figma/tool-figma.png", alt: "Figma" },
  { src: "/figma/tool-notion.png", alt: "Notion" },
  { src: "/figma/tool-openai.png", alt: "OpenAI" },
  { src: "/figma/tool-gemini.png", alt: "Gemini" },
] as const;

const conclusionsRows = [
  {
    aspect: "Komunikacja",
    traditional: "Chat (Messanger/WhatsApp)",
    finding: "Szybka i łatwa, ale informacje giną w konwersacji",
  },
  {
    aspect: "Dane",
    traditional: "Linki, arkusze, mail",
    finding: "Zorganizowane, ale zmuszają do użycia kolejnych narzędzi",
  },
  {
    aspect: "Decyzja",
    traditional: "Brak twardej, zbiorczej akceptacji",
    finding:
      "Decyzje są opóźnione ze względu na rozproszenie informacji, czasami ważne wiadomości giną w zgielku",
  },
] as const;

const jobsToBeDone = [
  {
    icon: "notes",
    title: "Zebrać wszystkie pomysły w jednym miejscu",
    description:
      "Kiedy znajomi wrzucają pomysły na nocleg, transport czy atrakcje w różnych czatach i narzędziach, chcę mieć jedno miejsce, w którym mogę to wszystko szybko zebrać i uporządkować.",
  },
  {
    icon: "scale",
    title: "Porównać opcje i znaleźć „złoty środek”",
    description:
      "Kiedy mamy kilka propozycji noclegów, środków transportu czy atrakcji, chcę zobaczyć je obok siebie z głosami innych osób, żeby łatwo wybrać opcję, która najlepiej pasuje całej grupie.",
  },
  {
    icon: "chart-bar",
    title: "Śledzić status ustaleń",
    description:
      "Kiedy część decyzji jest już podjęta, a część tematów nadal jest otwarta, potrzebuję prostego widoku, który pokazuje status każdej kategorii, żebym w każdej chwili mogła sprawdzić, na jakim etapie jest nasz plan.",
  },
  {
    icon: "puzzle",
    title: "Jedno narzędzie zamiast pięciu",
    description:
      "Kiedy do planowania korzystamy jednocześnie z komunikatora, arkusza, notatek i zakładek w przeglądarce, chcę przenieść ten proces do jednego narzędzia, żebym nie musiała skakać między aplikacjami i szukać informacji w kilku miejscach.",
  },
  {
    icon: "eye",
    title: "Szybko „wejść w temat” jako uczestnik",
    description:
      "Kiedy dołączam do już planowanego wyjazdu, chcę w kilka sekund zrozumieć jaki jest zarys planu, żebym mogła szybko zdecydować, czy jadę i co muszę zorganizować po swojej stronie.",
  },
] as const;

const planningFlow = [
  "Użytkownik startuje od prostego formularza (data, nazwa, kierunek), który natychmiast tworzy współdzieloną przestrzeń.",
  "Użytkownicy dodają propozycje do dedykowanych kategorii. System automatycznie parsuje wklejane linki (np. z Airbnb), pobierając zdjęcia i ceny, aby uniknąć ręcznego uzupełniania danych.",
  "Każda kategoria ma status (np. aktywne głosowanie, zakończone). Komentarze są przypisane do danej kategorii co pozwala uporządkować wątki.",
] as const;

const scheduleFlow = [
  "Wyświetla tylko zwycięskie opcje (np. wybrany hotel, konkretny pociąg).",
  'Kluczową funkcją jest przycisk "Pobierz PDF", który generuje plik z m.in. adresami i godzinami, dostępny nawet przy braku zasięgu w podróży..',
] as const;

const testTasks = [
  "Dodanie nowej kategorii.",
  "Dodanie opcji do kategorii.",
  "Ogólne poruszanie się po aplikacji.",
] as const;

const nextSteps = [
  "wprowadzeniu funkcji “Guest Mode” dla zaproszonych użytkowników. Dzięki temu wyeliminowałabym barierę wejścia i wyciągnęłabym rękę do użytkowników, którzy nie chcą od samego początku zakładać konta",
  "audycie WCAG w celu sprawdzenia wszystkich kontrastów i hierarchii.",
] as const;

const successMetrics = [
  "czas osiągnięcia ostatecznej decyzji - skrócenie czasu, jaki zajmuje grupie przejście od dodania propozycji do podjęcia ostatecznej decyzji, weryfikowany zarówno danymi analitycznymi w aplikacji  i badaniami jakościowymi (ankiety, wywiady),",
  "skuteczność automatycznych linków - monitorowanie kluczowej funkcji automatycznego zaciągania danych z linków zewnętrznych, niska częstotliwość błędów jest tu miarą zaufania do aplikacji.",
] as const;
---

<Layout title={project.title} description={project.description}>
  <section class="hidden px-8 pt-[80px] lg:block lg:px-16" aria-label="Separator sekcji projektu">
    <div class="mx-auto flex min-h-[20px] w-full items-center">
      <div class="h-px w-full border-b border-[var(--color-subtle)]"></div>
    </div>
  </section>
  <section class="px-8 pt-[80px] lg:hidden" aria-label="Separator sekcji projektu mobilnie">
    <div class="flex min-h-[20px] items-center">
      <div class="h-px w-full border-b border-[var(--color-subtle)]"></div>
    </div>
  </section>

  <article class="mx-auto w-full max-w-[1040px] px-6 pb-[96px] pt-[80px] lg:px-0 lg:pb-[160px] lg:pt-[80px]" aria-labelledby="work-detail-title">
    <div class="sticky top-[32px] z-30 hidden h-0 w-full lg:block">
      <div class="flex justify-end pr-[24px]">
        <a
          href="/work"
          data-case-study-close
          class="flex size-[44px] items-center justify-center rounded-full border border-[#0e0e0e] bg-[var(--color-background)] text-[var(--color-text)] transition-colors hover:bg-[var(--color-foreground)]"
          aria-label="Powrót do listy projektów"
        >
          <TablerIcon name="x" class="size-[24px]" />
        </a>
      </div>
    </div>

    <div class="flex flex-col gap-[96px]">
      <header class="mx-auto flex w-full max-w-[864px] flex-col gap-[40px]">
      <div class="flex flex-col gap-[24px]">
        <h1
          id="work-detail-title"
          class="text-[34px] leading-[1.2] text-[var(--color-text)] lg:text-[32px] lg:leading-[44px]"
          transition:name={`work-${project.slug}-title`}
        >
          {project.title}
        </h1>

        <ul class="flex flex-wrap items-center gap-[16px]" aria-label="Tagi projektu">
          {
            project.tags.map((tag, tagIndex) => (
              <li
                class="rounded-[5555px] border border-[var(--color-border)] px-[12px] py-[8px] text-[14px] leading-[20px] tracking-[0.25px] text-[var(--color-text)]"
                transition:name={`work-${project.slug}-tag-${tagIndex}`}
              >
                {tag}
              </li>
            ))
          }
        </ul>
      </div>

      <div
        class="relative h-[420px] w-full overflow-hidden bg-[var(--color-surface)] lg:h-[568px]"
        transition:name={`work-${project.slug}-card`}
      >
        <img
          src={project.image}
          alt={`Podgląd projektu ${project.title}`}
          class="size-full object-cover"
          transition:name={`work-${project.slug}-image`}
        />
      </div>
    </header>

    <section class="mx-auto grid w-full max-w-[864px] gap-[32px] lg:grid-cols-[598px_215px] lg:items-start" aria-label="Project overview">
      <div class="flex flex-col gap-[24px]">
        <div class="flex flex-col gap-[14px]">
          <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[#474747]">Project overview</p>
          <h2 class="text-[36px] leading-[44px] text-[var(--color-text)]">Wstęp</h2>
        </div>
        <div class="h-px w-full bg-[var(--color-border)]"></div>
        <p class="text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          Planowanie grupowych wyjazdów bywa męczące. Setki wiadomości, linki do hoteli ginące w konwersacji, a decyzja „gdzie i kiedy” rozjeżdża się w chaosie. Zaprojektowałam aplikację mobilną, która zmienia ten chaotyczny proces w ułożony plan. To narzędzie, które pomaga w komunikacji, ułatwia podejmowanie decyzji z pomocą głosowania i automatycznie generuje finalny harmonogram wyjazdu, aby zawsze był pod ręką.
        </p>
      </div>

      <aside class="flex flex-col gap-[20px]" aria-label="Informacje o projekcie">
        <div class="rounded-[12px] border border-[var(--color-border)] px-[20px] py-[14px]">
          <p class="text-[14px] font-medium leading-[20px] tracking-[0.25px] text-[var(--color-text)]">Czas trwania</p>
          <p class="mt-[12px] text-[14px] leading-[20px] tracking-[0.25px] text-[#6a6a6a]">około 5 tygodni</p>
        </div>

        <div class="rounded-[12px] border border-[var(--color-border)] px-[20px] py-[14px]">
          <p class="text-[14px] font-medium leading-[20px] tracking-[0.25px] text-[var(--color-text)]">Typ projektu</p>
          <p class="mt-[12px] text-[14px] leading-[20px] tracking-[0.25px] text-[#6a6a6a]">Projekt konceptualny</p>
        </div>

        <div class="rounded-[12px] border border-[var(--color-border)] px-[20px] py-[14px]">
          <p class="text-[16px] font-medium leading-[24px] tracking-[0.15px] text-[var(--color-text)]">Narzędzia</p>
          <ul class="mt-[12px] flex items-start gap-[16px]" aria-label="Narzędzia projektu">
            {
              tools.map((tool) => (
                <li>
                  <img src={tool.src} alt={tool.alt} class="size-[24px] object-cover" loading="lazy" />
                </li>
              ))
            }
          </ul>
        </div>
      </aside>
    </section>

    <section class="grid gap-[48px] lg:grid-cols-[509px_467px] lg:items-center lg:gap-[64px]" aria-labelledby="problem-title">
      <div class="flex flex-col gap-[24px]">
        <h2 id="problem-title" class="text-[36px] leading-[44px] text-[var(--color-text)]">Problem</h2>
        <div class="h-[2px] w-full bg-[var(--color-divider)]"></div>
        <p class="text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          Podczas wspólnego planowania wyjazdów pojawiają się chaos i frustracja . Są one spowodowane rozproszeniem decyzji i informacji między różnymi narzędziami, które nie współpracują ze sobą, co powoduje problemy w płynnym przejściu procesu. W efekcie użytkownicy tracą poczucie kontroli nad planem i terminami, a juz ustalone decyzje gubią się w zgiełku informacji.
        </p>
        <p class="text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]"><strong>Frustracja:</strong> Uczestnicy gubią się w wątkach i tracą poczucie kontroli.</p>
        <p class="text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]"><strong>Paraliż decyzyjny:</strong> Trudno ustalić jedną wersję wydarzeń, gdy opinie są rozsiane po różnych kanałach.</p>
        <p class="text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]"><strong>Strata czasu:</strong> Organizer musi ręcznie spinać ustalenia w całość.</p>
      </div>
      <div class="h-[360px] overflow-hidden bg-[var(--color-surface)] lg:h-[467px]">
        <img src="/figma/checker.png" alt="Ilustracja problemu planowania grupowych wyjazdów" class="size-full object-cover" loading="lazy" />
      </div>
    </section>

    <section class="grid gap-[48px] lg:grid-cols-[467px_507px] lg:items-center lg:gap-[64px]" aria-labelledby="goal-title">
      <div class="h-[360px] overflow-hidden bg-[var(--color-surface)] lg:h-[467px]">
        <img src="/figma/checker.png" alt="Widok zaproszenia do planowania wyjazdu" class="size-full object-cover" loading="lazy" />
      </div>
      <div class="flex flex-col gap-[24px]">
        <h2 id="goal-title" class="text-[36px] leading-[44px] text-[var(--color-text)]">Cel</h2>
        <div class="h-px w-full bg-[var(--color-border)]"></div>
        <p class="text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          Celem aplikacji jest zaprojektowanie platformy, która w jasny i angażujący sposób zbiera propozycje, ułatwia grupie szybkie podjęcie decyzji (poprzez głosowanie) oraz weryfikuje postęp, przenosząc cały proces planowania z chaotycznych czatów i rozsianych narzędzi do jednego, spójnego harmonogramu.
        </p>
      </div>
    </section>

    <section class="flex flex-col gap-[64px]" aria-labelledby="research-title">
      <div class="flex flex-col gap-[24px]">
        <div class="flex flex-col gap-[14px]">
          <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[#474747]">Research</p>
          <h2 id="research-title" class="text-[36px] leading-[44px] text-[var(--color-text)]">Proces badawczy</h2>
        </div>
        <div class="h-px w-full bg-[var(--color-border)]"></div>
        <p class="text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          Aby lepiej zrozumieć z jakimi problemami zmagają się różni użytkownicy planujący wyjazdy zrealizowałam 3 wywiady pogłębione (IDI) z osobami, które organizują wyjazdy w grupach.
        </p>
        <p class="text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">Kluczowe pytania, które zadałam w trakcie każdego wywiadu to:</p>
        <ul class="list-disc pl-[24px] text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          <li>Jakie były największe wyzwania podczas planowania ostatniego wyjazdu?</li>
          <li>W jaki sposób grupa wymienia się uwagami oraz podejmuje ostateczne decyzję?</li>
          <li>Co chcieliby pominąć w trakcie całego procesu, aby był prostszy?</li>
        </ul>
      </div>

      <div class="h-[420px] overflow-hidden bg-[var(--color-surface)] lg:h-[948px]">
        <img src="/figma/checker.png" alt="Wyniki i artefakty procesu badawczego" class="size-full object-cover" loading="lazy" />
      </div>
    </section>

    <section class="grid gap-[48px] lg:grid-cols-[504px_467px] lg:items-stretch lg:gap-[64px]" aria-labelledby="conclusions-title">
      <div class="flex flex-col gap-[24px]">
        <h2 id="conclusions-title" class="text-[36px] leading-[44px] text-[var(--color-text)]">Wnioski</h2>
        <div class="h-px w-full bg-[var(--color-border)]"></div>
        <p class="text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          Wykorzystując FigJam, przeanalizowałam wypowiedzi badanych i pogrupowałam je w obszary tematyczne. Dzięki temu mogłam w prosty sposób określić jakie są podobieństwa w całym procesie, na jakie problemy trafiają użytkownicy i na czym warto skupić się podczas projektowania aplikacji.
        </p>

        <div class="overflow-hidden rounded-[16px] border border-[var(--color-border)]">
          <div class="grid grid-cols-3 border-b border-[var(--color-border)] bg-[var(--color-foreground)]">
            <p class="px-[16px] py-[12px] text-[14px] font-medium leading-[20px] tracking-[0.25px]">Aspekt</p>
            <p class="px-[16px] py-[12px] text-[14px] font-medium leading-[20px] tracking-[0.25px]">Tradycyjny proces</p>
            <p class="px-[16px] py-[12px] text-[14px] font-medium leading-[20px] tracking-[0.25px]">Wnioski</p>
          </div>

          {
            conclusionsRows.map((row, index) => (
              <div class:list={["grid grid-cols-3", index < conclusionsRows.length - 1 ? "border-b border-[var(--color-border)]" : ""]}>
                <p class="px-[16px] py-[12px] text-[14px] leading-[20px] tracking-[0.25px] text-[var(--color-text)]">{row.aspect}</p>
                <p class="px-[16px] py-[12px] text-[14px] leading-[20px] tracking-[0.25px] text-[var(--color-text)]">{row.traditional}</p>
                <p class="px-[16px] py-[12px] text-[14px] leading-[20px] tracking-[0.25px] text-[var(--color-text)]">{row.finding}</p>
              </div>
            ))
          }
        </div>
      </div>

      <div class="h-[420px] overflow-hidden bg-[var(--color-surface)] lg:h-[612px]">
        <img src="/figma/checker.png" alt="Wizualizacja wniosków z badań" class="size-full object-cover" loading="lazy" />
      </div>
    </section>

    <section class="flex flex-col gap-[64px]" aria-labelledby="define-title">
      <div class="flex flex-col gap-[24px]">
        <div class="flex flex-col gap-[14px]">
          <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[#474747]">Define</p>
          <h2 id="define-title" class="text-[36px] leading-[44px] text-[var(--color-text)]">Definiowanie rozwiązania</h2>
        </div>
        <div class="h-px w-full bg-[var(--color-border)]"></div>
        <p class="text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          Na bazie wniosków sformułowałam pytania "How Might We" (Jak moglibyśmy?) oraz ogólny storyboard ukazujący jak aplikacja może być użyta. te działania pozwoliły mi ukierunkować dalszy proces projektowy.
        </p>

        <ol class="flex flex-col gap-[32px]">
          <li class="grid gap-[12px] lg:grid-cols-[27px_1fr] lg:gap-[16px]">
            <p class="text-[45px] font-bold leading-[52px] text-[#474747]">1</p>
            <div class="flex flex-col gap-[12px]">
              <p class="text-[16px] leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Jak możemy sprawić ułatwić podejmowanie decyzji i zredukować stres?</p>
              <p class="text-[16px] italic leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Rozwiązanie: Dedykowane kategorie (np. nocleg, transport, jedzenie) z listą opcji dodawanych przez uczestników wyjazdu.</p>
            </div>
          </li>
          <li class="grid gap-[12px] lg:grid-cols-[27px_1fr] lg:gap-[16px]">
            <p class="text-[45px] font-bold leading-[52px] text-[#474747]">2</p>
            <div class="flex flex-col gap-[12px]">
              <p class="text-[16px] leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Jak możemy zebrać wszystkie propozycje w jednym miejscu, aby nie przepadły w historii czatu?</p>
              <p class="text-[16px] italic leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Rozwiązanie: Stworzyć jedno miejsce gdzie można gromadzić wszystkie informację dotyczące wyjazdów.</p>
            </div>
          </li>
          <li class="grid gap-[12px] lg:grid-cols-[27px_1fr] lg:gap-[16px]">
            <p class="text-[45px] font-bold leading-[52px] text-[#474747]">3</p>
            <div class="flex flex-col gap-[12px]">
              <p class="text-[16px] leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Jak możemy zmienić gotowy plan w prosty harmonogram dostępny zawsze pod ręką?</p>
              <p class="text-[16px] italic leading-[22px] tracking-[0.25px] text-[var(--color-text)]">Rozwiązanie: Automatyczny harmonogram wygenerowany na podstawie decyzji grupy.</p>
            </div>
          </li>
        </ol>
      </div>

      <div class="h-[420px] overflow-hidden bg-[var(--color-surface)] lg:h-[837px]">
        <img src="/figma/checker.png" alt="Storyboard definiujący rozwiązanie" class="size-full object-cover" loading="lazy" />
      </div>
    </section>

    <section class="mx-auto flex w-full max-w-[864px] flex-col gap-[64px]" aria-labelledby="jtbd-title">
      <div class="flex flex-col gap-[24px]">
        <div class="flex flex-col gap-[14px]">
          <p class="text-[16px] leading-[16px] tracking-[0.4px] text-[#474747]">JTBD</p>
          <h2 id="jtbd-title" class="text-[36px] leading-[44px] text-[var(--color-text)]">Jobs to be done</h2>
        </div>
        <div class="h-px w-full bg-[var(--color-border)]"></div>
        <p class="text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          Na podstawie wywiadów i analizy obecnego sposobu planowania wyjazdów w grupie, zamiast myśleć od razu o funkcjach, skupiłam się na tym, w jaki sposób aplikacja może pomóc w procesie. W tym celu ustaliłam “jobsy”, które uzytkownicy mają do zrobienia i które plikacja mogłaby znacząco uprościć. Poniżej przedstawiam kluczowe jobs to be done dla ReadySet, głównie z perspektywy osoby organizującej wyjazd, ale z uwzględnieniem potrzeb pozostałych uczestników.
        </p>
      </div>

      <div class="flex flex-col gap-[24px]">
        {
          jobsToBeDone.map((job) => (
            <article class="rounded-[12px] border border-[var(--color-border)] bg-[var(--color-foreground)] px-[20px] py-[32px]" aria-label={job.title}>
              <div class="flex flex-col gap-[20px] lg:flex-row lg:items-center lg:gap-[24px]">
                <TablerIcon name={job.icon} class="size-[56px] text-[#1d272d]" />
                <div class="flex-1">
                  <h3 class="text-[22px] leading-[28px] text-[var(--color-text)]">{job.title}</h3>
                  <p class="mt-[20px] text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">{job.description}</p>
                </div>
              </div>
            </article>
          ))
        }
