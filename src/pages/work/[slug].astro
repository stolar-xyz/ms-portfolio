---
import Layout from "../../layouts/Layout.astro";
import TablerIcon from "../../components/TablerIcon.astro";
import { getAllProjects } from "../../lib/projects";

export function getStaticPaths() {
  return getAllProjects().map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const isMova = project.slug === "mova-aplikacja-do-nauki-jezykow";

const tools = isMova
  ? ([{ src: "/icons/tool-figma.png", alt: "Figma" }] as const)
  : ([
      { src: "/icons/tool-figma.png", alt: "Figma" },
      { src: "/icons/tool-notion.png", alt: "Notion" },
      { src: "/icons/tool-openai.png", alt: "OpenAI" },
      { src: "/icons/tool-gemini.png", alt: "Gemini" },
    ] as const);

const conclusionsRows = isMova
  ? ([
      {
        aspect: "Nawyk",
        traditional: "Silna gamifikacja",
        finding: "Wracanie do aplikacji kosztem jakości nauki",
      },
      {
        aspect: "Struktura",
        traditional: "Brak jasnej ścieżki",
        finding: "Dezorientacja i frustracja użytkownika",
      },
      {
        aspect: "Treść",
        traditional: "Dużo materiału na start",
        finding: "Przytłoczenie i spadek motywacji",
      },
    ] as const)
  : ([
      {
        aspect: "Komunikacja",
        traditional: "Chat (Messenger/WhatsApp)",
        finding: "Szybka, ale informacje giną w historii",
      },
      {
        aspect: "Dane",
        traditional: "Linki, arkusze, maile",
        finding: "Rozproszone między wieloma narzędziami",
      },
      {
        aspect: "Decyzje",
        traditional: "Ankiety w komunikatorach",
        finding: "Brak trwałej akceptacji, giną w konwersacji",
      },
    ] as const);

const jobsToBeDone = isMova
  ? ([
      {
        icon: "chart-bar",
        title: "Jasność progresu",
        description: "Użytkownik zawsze powinien wiedzieć, gdzie jest w strukturze kursu.",
      },
      {
        icon: "notes",
        title: "Stopniowe wprowadzanie materiału",
        description: "Materiał podzielony na krótkie, logiczne etapy zamiast przytłaczających bloków.",
      },
      {
        icon: "eye",
        title: "Skupienie na treści",
        description: "Design ma wspierać naukę i nie konkurować z materiałem edukacyjnym.",
      },
      {
        icon: "scale",
        title: "Elastyczność platform",
        description: "Spójne doświadczenie na mobile i desktop, dopasowane do kontekstu użycia.",
      },
    ] as const)
  : ([
      {
        icon: "notes",
        title: "Zebrać wszystkie propozycje w jednym miejscu",
        description:
          "Kiedy pomysły na nocleg, transport i atrakcje są rozproszone po czatach i narzędziach, potrzebuję jednego miejsca do zbierania i porządkowania wszystkich informacji.",
      },
      {
        icon: "scale",
        title: "Porównać opcje i podjąć wspólną decyzję",
        description:
          "Kiedy mamy kilka propozycji, chcę zobaczyć je obok siebie wraz z opiniami grupy, żeby wybrać najlepszą opcję dla wszystkich.",
      },
      {
        icon: "chart-bar",
        title: "Monitorować postęp planowania",
        description:
          "Kiedy część decyzji jest zamknięta, a część wciąż otwarta, potrzebuję przejrzystego widoku statusu każdej kategorii.",
      },
      {
        icon: "download",
        title: "Mieć gotowy plan zawsze pod ręką",
        description:
          "Kiedy wyjazd jest już zaplanowany, chcę mieć wszystkie informacje (adresy, godziny, linki) w jednym miejscu, dostępne nawet bez internetu.",
      },
    ] as const);

const planningFlow = isMova
  ? ([
      "Lekcje są uporządkowane tematycznie w ramach modułów, co porządkuje cały proces nauki.",
      "Każda lekcja ma trzy etapy: poznanie materiału, ćwiczenia i podsumowanie.",
      "Użytkownik może budować własną bazę słówek i wracać do nich przez fiszki na stronie głównej.",
    ] as const)
  : ([
      "Prosty start: użytkownik tworzy wyjazd przez formularz (data, nazwa, kierunek), który natychmiast generuje współdzieloną przestrzeń.",
      "Dashboard z kafelkami kategorii: status każdej kategorii (np. aktywne głosowanie, zakończone) daje poczucie kontroli nad procesem.",
      "Automatyczne parsowanie linków: system pobiera zdjęcia, ceny i nazwy z wklejanych linków (np. Airbnb, Booking), eliminując ręczne uzupełnianie danych.",
      "Kontekst komentarzy: komentarze są przypisane do konkretnych kategorii zamiast jednego chaotycznego wątku.",
    ] as const);

const scheduleFlow = isMova
  ? ([
      "Wersja mobilna wspiera krótkie, regularne sesje oraz szybkie powtórki.",
      "Wersja webowa wspiera dłuższą pracę z materiałem i wygodę nauki przy biurku.",
      "Spójny design między platformami ułatwia płynne przechodzenie między urządzeniami.",
    ] as const)
  : ([
      "Po zamknięciu głosowań aplikacja automatycznie generuje czytelny harmonogram z zatwierdzonymi opcjami.",
      'Funkcja "Pobierz PDF": harmonogram można wyeksportować jako PDF dostępny offline.',
    ] as const);

const testTasks = isMova
  ? ([
      "Przejście przez lekcję od etapu poznania materiału do podsumowania.",
      "Odczytanie informacji o progresie i wskazanie kolejnego kroku.",
      "Dodanie słówek do własnej bazy i uruchomienie fiszek.",
    ] as const)
  : ([
      "Dodanie nowej kategorii.",
      "Dodanie opcji do kategorii.",
      "Ogólne poruszanie się po aplikacji.",
    ] as const);

const nextSteps = isMova
  ? ([
      "Testy użyteczności prototypu z grupą docelową i weryfikacja założeń dotyczących motywacji.",
      "Zaprojektowanie pełnej ścieżki onboardingowej bez przytłaczania użytkownika.",
    ] as const)
  : ([
      "Guest Mode - umożliwienie udziału w planowaniu bez zakładania konta, co obniży barierę wejścia.",
      "Audyt WCAG - weryfikacja kontrastów i hierarchii dla dostępności.",
    ] as const);

const successMetrics = isMova
  ? ([
      "Czas potrzebny na ukończenie pełnej lekcji bez utraty orientacji w strukturze kursu.",
      "Retencja użytkowników oparta na realnym progresie, a nie wyłącznie mechanikach gamifikacyjnych.",
    ] as const)
  : ([
      "Czas podjęcia decyzji - skrócenie czasu od dodania propozycji do zamknięcia głosowania (dane analityczne + badania jakościowe).",
      "Skuteczność parsowania linków - niska częstotliwość błędów przy automatycznym pobieraniu danych z zewnętrznych źródeł.",
    ] as const);
---

<Layout title={project.title} description={project.description}>
  <section class="hidden px-[32px] pt-[32px] lg:block lg:px-16 lg:pt-[40px]" aria-label="Separator sekcji projektu">
    <div class="mx-auto flex min-h-[20px] w-full items-center">
      <div class="h-px w-full border-b border-[var(--color-subtle)]"></div>
    </div>
  </section>
  <section class="px-[32px] pt-[32px] lg:hidden" aria-label="Separator sekcji projektu mobilnie">
    <div class="flex min-h-[20px] items-center">
      <div class="h-px w-full border-b border-[var(--color-subtle)]"></div>
    </div>
  </section>

  <article class="mx-auto w-full max-w-[1040px] px-6 pb-[120px] pt-[80px] lg:px-0 lg:pb-[200px] lg:pt-[80px]" aria-labelledby="work-detail-title">
    <div class="sticky top-[32px] z-30 hidden h-0 w-full lg:block">
      <div class="flex justify-end pr-[24px]">
        <a
          href="/work"
          data-case-study-close
          class="flex size-[44px] items-center justify-center rounded-full border border-[#0e0e0e] bg-[var(--color-background)] text-[var(--color-text)] transition-colors hover:bg-[var(--color-foreground)]"
          aria-label="Powrót do listy projektów"
        >
          <TablerIcon name="x" class="size-[24px]" />
        </a>
      </div>
    </div>

    <div class="flex flex-col gap-[80px] lg:gap-[120px]">
      <header class="mx-auto flex w-full max-w-[864px] flex-col gap-[40px]">
      <div class="flex flex-col gap-[24px]">
        <h1
          id="work-detail-title"
          class="text-[34px] leading-[1.2] text-[var(--color-text)] lg:text-[32px] lg:leading-[44px]"
          transition:name={`work-${project.slug}-title`}
        >
          {project.title}
        </h1>

        <ul class="flex flex-wrap items-center gap-[16px]" aria-label="Tagi projektu">
          {
            project.tags.map((tag, tagIndex) => (
              <li
                class="rounded-[5555px] border border-[var(--color-border)] px-[12px] py-[8px] text-[14px] leading-[20px] tracking-[0.25px] text-[var(--color-text)]"
                transition:name={`work-${project.slug}-tag-${tagIndex}`}
              >
                {tag}
              </li>
            ))
          }
        </ul>
      </div>

      <div
        class={`relative h-[420px] w-full overflow-hidden lg:h-[568px] ${project.slug === "readyset-aplikacja-do-planowania-wyjazdow" || isMova ? "" : "bg-[var(--color-surface)]"}`}
        transition:name={`work-${project.slug}-card`}
      >
        <img
          src={project.slug === "readyset-aplikacja-do-planowania-wyjazdow" ? "/assets/ready-set/hero-readyset.png" : isMova ? "/assets/mova/hero-mova.png" : project.image}
          alt={`Podgląd projektu ${project.title}`}
          class="size-full object-cover"
          transition:name={`work-${project.slug}-image`}
        />
      </div>
    </header>

    <section class="mx-auto grid w-full max-w-[864px] gap-[32px] lg:grid-cols-[598px_215px] lg:items-start" aria-label="Project overview">
      <div class="flex flex-col gap-[24px]">
        <div class="flex flex-col gap-[14px]">
          <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[#474747]">Project overview</p>
          <h2 class="text-[36px] leading-[44px] text-[var(--color-text)]">{isMova ? "Kontekst projektu" : "Wstęp"}</h2>
        </div>
        <div class="h-px w-full bg-[var(--color-border)]"></div>
        <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          {isMova
            ? "Mova to projekt konceptualny oparty na realnym projekcie komercyjnym. W zespole odpowiadałam za makiety, interaktywny prototyp i design system zapewniający spójność produktu. Wersję portfolio przygotowałam samodzielnie, pokazując kluczowe decyzje projektowe i podejście do projektowania aplikacji edukacyjnych."
            : "Planowanie grupowych wyjazdów bywa męczące. Setki wiadomości, linki ginące w konwersacji, a decyzje rozmywają się między różnymi narzędziami. ReadySet to aplikacja mobilna, która porządkuje cały ten proces. Centralizuje komunikację, usprawnia podejmowanie decyzji przez głosowanie i automatycznie generuje finalny harmonogram zawsze dostępny pod ręką."}
        </p>
      </div>

      <aside class="flex flex-col gap-[20px]" aria-label="Informacje o projekcie">
        <div class="rounded-[12px] border border-[var(--color-border)] px-[20px] py-[14px]">
          <p class="text-[14px] font-medium leading-[20px] tracking-[0.25px] text-[var(--color-text)]">Czas trwania</p>
          <p class="mt-[12px] text-[14px] leading-[20px] tracking-[0.25px] text-[#6a6a6a]">{isMova ? "2 tygodnie" : "około 5 tygodni"}</p>
        </div>

        <div class="rounded-[12px] border border-[var(--color-border)] px-[20px] py-[14px]">
          <p class="text-[14px] font-medium leading-[20px] tracking-[0.25px] text-[var(--color-text)]">Typ projektu</p>
          <p class="mt-[12px] text-[14px] leading-[20px] tracking-[0.25px] text-[#6a6a6a]">{isMova ? "Projekt konceptualny (portfolio) na bazie projektu komercyjnego" : "Projekt konceptualny"}</p>
        </div>

        <div class="rounded-[12px] border border-[var(--color-border)] px-[20px] py-[14px]">
          <p class="text-[14px] font-medium leading-[20px] tracking-[0.25px] text-[var(--color-text)]">Narzędzia</p>
          <ul class="mt-[12px] flex items-start gap-[16px]" aria-label="Narzędzia projektu">
            {
              tools.map((tool) => (
                <li>
                  <img src={tool.src} alt={tool.alt} class="size-[24px] object-cover" loading="lazy" />
                </li>
              ))
            }
          </ul>
        </div>
      </aside>
    </section>

    <section class={`grid gap-[48px] lg:grid-cols-[509px_467px] lg:items-center lg:gap-[64px] ${isMova ? "order-1" : ""}`} aria-labelledby="problem-title">
      <div class="flex flex-col gap-[24px] lg:justify-center">
        <h2 id="problem-title" class="text-[36px] leading-[44px] text-[var(--color-text)]">Problem</h2>
        <div class="h-[2px] w-full bg-[var(--color-divider)]"></div>
        <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          {isMova
            ? "Nauka języków obcych wymaga regularności i poczucia postępu. W aplikacjach rynkowych często pojawiają się dwa skrajne problemy: nadmierna gamifikacja lub przytłoczenie ogromem treści na starcie."
            : "Planowanie wyjazdów w grupie generuje chaos z powodu rozproszenia informacji między różnymi narzędziami. Użytkownicy tracą kontrolę nad planem, decyzje gubią się w wątkach, a organizator musi ręcznie spinać ustalenia."}
        </p>
        <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]"><strong>{isMova ? "Nadmierna gamifikacja:" : "Frustracja:"}</strong> {isMova ? "użytkownik wraca dla streaka i rankingu, zamiast realnie uczyć się języka." : "Uczestnicy gubią się w wątkach i tracą poczucie kontroli."}</p>
        <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]"><strong>{isMova ? "Przytłoczenie treścią:" : "Paraliż decyzyjny:"}</strong> {isMova ? "zbyt duża ilość materiału na wejściu zniechęca jeszcze przed rozpoczęciem nauki." : "Trudno ustalić jedną wersję wydarzeń, gdy opinie są rozsiane po różnych kanałach."}</p>
        {!isMova && <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]"><strong>Strata czasu:</strong> Organizer musi ręcznie spinać ustalenia w całość.</p>}
      </div>
      <div class="h-[360px] overflow-hidden rounded-[12px] bg-[var(--color-surface)] lg:h-[467px]">
        {isMova ? (
          <video src="/assets/mova/IOS-Stack-1-1.mp4" aria-label="Animacja kart do nauki języków" class="size-full object-cover" autoplay loop muted playsinline></video>
        ) : (
          <video src="/assets/ready-set/start-page (1).mp4" aria-label="Ilustracja problemu planowania grupowych wyjazdów" class="size-full object-cover" autoplay loop muted playsinline></video>
        )}
      </div>
    </section>

    <section class={`grid gap-[48px] lg:grid-cols-[467px_507px] lg:items-center lg:gap-[64px] ${isMova ? "order-2" : ""}`} aria-labelledby="goal-title">
      <div class="h-[360px] overflow-hidden bg-[var(--color-surface)] lg:h-[467px]">
        <img src={isMova ? "/assets/mova/macbook-mova.png" : "/assets/ready-set/invite-readyset.png"} alt={isMova ? "Widok aplikacji Mova w wersji webowej" : "Widok zaproszenia do planowania wyjazdu"} class="size-full object-cover" loading="lazy" />
      </div>
      <div class="flex flex-col gap-[24px] lg:justify-center">
        <h2 id="goal-title" class="text-[36px] leading-[44px] text-[var(--color-text)]">Cel</h2>
        <div class="h-px w-full bg-[var(--color-border)]"></div>
        <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          {isMova
            ? "Celem było zaprojektowanie aplikacji, która prowadzi użytkownika przez naukę spokojnie i konsekwentnie. Narzędzie ma pokazywać, co zostało zrobione, co jest w toku i co jest kolejnym krokiem, bez walki o uwagę użytkownika."
            : "Zaprojektować platformę, która w jasny sposób zbiera propozycje, ułatwia grupie szybkie podjęcie decyzji oraz weryfikuje postęp, przenosząc cały proces planowania z chaotycznych czatów i rozsianych narzędzi do jednego, spójnego harmonogramu. Krótko mówiąc: cały wyjazd w jednym miejscu."}
        </p>
      </div>
    </section>

    <section class={isMova ? "order-3 grid gap-[48px] lg:grid-cols-[504px_467px] lg:items-center lg:gap-[64px]" : "flex flex-col gap-[64px]"} aria-labelledby="research-title">
      <div class="flex flex-col gap-[24px]">
        <div class="flex flex-col gap-[14px]">
          <p class="text-[12px] uppercase leading-[16px] tracking-[0.4px] text-[#474747]">{isMova ? "Design process" : "Research"}</p>
          <h2 id="research-title" class="text-[36px] leading-[44px] text-[var(--color-text)]">{isMova ? "Research i analiza konkurencji" : "Proces badawczy"}</h2>
        </div>
        <div class="h-px w-full bg-[var(--color-border)]"></div>
        <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          {isMova
            ? "W researchu przeanalizowałam Duolingo, Babbel i Busuu pod kątem budowania nawyku, prezentacji progresu i prowadzenia użytkownika przez materiał."
            : "Przeprowadziłam 3 wywiady pogłębione (IDI) z osobami organizującymi wyjazdy grupowe, skupiając się na konkretnych wyzwaniach i sposobie podejmowania decyzji."}
        </p>
        <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">{isMova ? "Najważniejsze obserwacje z analizy:" : "Kluczowe pytania, które zadałam w trakcie każdego wywiadu to:"}</p>
        <ul class="list-disc pl-[24px] text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          {isMova ? (
            <>
              <li>Gamifikacja skutecznie buduje nawyk, ale często kosztem jakości nauki.</li>
              <li>Brak jasnej struktury lekcji powoduje dezorientację i frustrację.</li>
              <li>Użytkownik potrzebuje czytelnego progresu i logicznej ścieżki materiału.</li>
            </>
          ) : (
            <>
              <li>Jakie były największe wyzwania podczas planowania ostatniego wyjazdu?</li>
              <li>W jaki sposób grupa wymienia się uwagami i podejmuje decyzje?</li>
              <li>Co chcieliby uprościć w całym procesie?</li>
            </>
          )}
        </ul>
      </div>

      <div class="overflow-hidden">
        <img src={isMova ? "/assets/mova/two-phones-mova.png" : "/assets/ready-set/stickynotes-readyset.png"} alt={isMova ? "Ekrany i artefakty procesu projektowego Mova" : "Wyniki i artefakty procesu badawczego"} class={isMova ? "size-full object-cover" : "w-full h-auto"} loading="lazy" />
      </div>
    </section>

    <section class={isMova ? "order-4 mx-auto flex w-full max-w-[864px] flex-col gap-[24px]" : "grid gap-[48px] lg:grid-cols-[504px_467px] lg:items-stretch lg:gap-[64px]"} aria-labelledby="conclusions-title">
      <div class="flex flex-col gap-[24px] lg:justify-center">
        <h2 id="conclusions-title" class="text-[36px] leading-[44px] text-[var(--color-text)]">{isMova ? "Definiowanie założeń projektowych" : "Wnioski"}</h2>
        <div class="h-px w-full bg-[var(--color-border)]"></div>
        <p class="text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">
          {isMova
            ? "Na podstawie analizy zdefiniowałam główne zasady, którymi kierowałam się podczas projektowania."
            : "Wykorzystując affinity mapping, pogrupowałam wypowiedzi w obszary tematyczne i zidentyfikowałam kluczowe problemy."}
        </p>

        {isMova ? (
          <div class="flex flex-col gap-[24px]">
            {jobsToBeDone.map((job) => (
              <article class="rounded-[12px] border border-[var(--color-border)] bg-[var(--color-foreground)] px-[20px] py-[28px]">
                <div class="flex flex-col gap-[20px] lg:flex-row lg:items-center lg:gap-[24px]">
                  <TablerIcon name={job.icon} class="size-[56px] text-[#1d272d]" />
                  <div class="flex-1">
                    <h3 class="text-[22px] leading-[28px] text-[var(--color-text)]">{job.title}</h3>
                    <p class="mt-[20px] text-[14px] lg:text-[16px] leading-[24px] tracking-[0.5px] text-[var(--color-text)]">{job.description}</p>
                  </div>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="overflow-hidden rounded-[16px] border border-[var(--color-border)]">
            <div class="grid grid-cols-3 border-b border-[var(--color-border)] bg-[var(--color-foreground)]">
