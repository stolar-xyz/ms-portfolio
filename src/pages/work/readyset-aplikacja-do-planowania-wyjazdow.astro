---
import WorkCaseShell from "../../components/work/WorkCaseShell.astro";
import ReadySetCaseContent from "../../components/work/cases/ReadySetCaseContent.astro";
import { getProjectBySlug } from "../../lib/projects";

const project = getProjectBySlug("readyset-aplikacja-do-planowania-wyjazdow");

if (!project) {
  return Astro.redirect("/work");
}

const tools = [
  { src: "/icons/tool-figma.png", alt: "Figma" },
  { src: "/icons/tool-notion.png", alt: "Notion" },
  { src: "/icons/tool-openai.png", alt: "OpenAI" },
  { src: "/icons/tool-gemini.png", alt: "Gemini" },
] as const;
---

<WorkCaseShell
  project={project}
  tools={tools}
  heroImage="/assets/ready-set/hero-readyset.png"
  overviewHeading="Wstęp"
  overviewText="Planowanie grupowych wyjazdów bywa męczące. Setki wiadomości, linki ginące w konwersacji, a decyzje rozmywają się między różnymi narzędziami. ReadySet to aplikacja mobilna, która porządkuje cały ten proces. Centralizuje komunikację, usprawnia podejmowanie decyzji przez głosowanie i automatycznie generuje finalny harmonogram zawsze dostępny pod ręką."
  duration="około 5 tygodni"
  projectType="Konceptualny"
>
  <ReadySetCaseContent />
</WorkCaseShell>
